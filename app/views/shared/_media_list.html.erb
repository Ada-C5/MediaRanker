<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Ranking</th>
      <th>Title</th>
      <th>Upvote</th>
    </tr>
  </thead>
  <tbody>
  <% if @movies %>
    <% @movies.each do |movie| %>
      <tr>
        <td>Ranking: <%= movie.rank %></td>
        <td><%= link_to movie.title, movie_path(movie.id) %></td>
        <td><%= button_to "Upvote", movie_upvote_path(movie.id), method: :put, class: "btn btn-default" %></td>
      </tr>
    <% end %>
    <%= button_to "Add a Movie", new_movie_path, method: :get, class: "btn btn-default" %>

  <% elsif @books %>
    <% @books.each do |book| %>
      <tr>
        <td>Ranking: <%= book.rank %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= button_to "Upvote", book_upvote_path(book.id), method: :put, class: "btn btn-default" %></td>
      </tr>
    <% end %>
    <%= button_to "Add a Book", new_book_path, method: :get, class: "btn btn-default" %>

  <% else %>
    <% @albums.each do |album| %>
      <tr>
        <td>Ranking: <%= album.rank %></td>
        <td><%= link_to album.title, album_path(album.id) %></td>
        <td><%= button_to "Upvote", album_upvote_path(album.id), method: :put, class: "btn btn-default" %></td>
      </tr>
    <% end %>
    <%= button_to "Add an Album", new_album_path, method: :get, class: "btn btn-default" %>

  <% end %>
  <%= button_to "View All Media", root_path, method: :get, class: "btn btn-default" %>

  </tbody>
</table>
<div class="row">
<div class="col-lg-12">
<h2>Edit Movie</h2>

<%= form_for @movie do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :director %>:
  <%= f.text_field :director %><br />

  <%= f.label :description %>:
  <%= f.text_field :description %><br />

  <%= f.submit %>
<% end %>

</div>
</div>

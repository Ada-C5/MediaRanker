<div class="col-lg-12">
  <h1> <strong><%= @movie.name %></strong><small> Directed By: <%= @movie.director %></small> </h1>
  <h3>Ranked: <%= @movie.rank %> </h3>
  <h4> <%= @movie.description %> </h4>
<div style= "display: inline">
<%= button_to "Upvote", { action: "update", class: "upvote" },  method: :patch, class:"btn btn-primary" %>
<%= button_to "Edit #{@movie.name}", { action: "edit", id: @movie.id },  method: :get, class:"btn btn-default" %>
<%= button_to "Delete", {action: "destroy", id: @movie.id}, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %>
<%= button_to "View All Movies", movies_path, method: :get, class:"btn btn-default"%>
<%= button_to "View All Media", root_path, method: :get, class:"btn btn-default" %>
  </div>
</div>

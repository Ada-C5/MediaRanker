<div class="col-lg-12">
  <h2><%= @movie.title %>
    <small>Directed By: <%= @movie.directed_by %></small>
  </h2>
  <p><h4>Ranking: <%= @movie.rank %></h4></p>
  <p><%= @movie.description %></p>
  <p>
    <%= button_to "Upvote", movie_upvote_path(@movie.id), method: :put, class: "btn btn-primary" %>
  </p>
  <div class="show-buttons">
    <%= button_to "Edit Movie", edit_movie_path(@movie.id), method: :get, class: "btn btn-default" %>
    <%= button_to "DELETE", movie_path, method: :delete, class: "btn btn-danger" %>
    <%= button_to "View All Movies", movies_path, method: :get, class: "btn btn-default" %>
    <%= button_to "View All Media", root_path, method: :get, class: "btn btn-default" %>
  </div>
</div>
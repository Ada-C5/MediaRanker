<div class="row">
<div class="col-lg-12">

  <h1>
    <%= @movie.name %>
    <small>Directed by: <%= @movie.director %></small>
  </h1>

  <h4>
    Ranked: <%= @movie.votes %>
  </h4>

  <p>
    <%= @movie.description %>
  </p>

  <%= button_to "Upvote", {:controller => "movies", :action => "upvote", :id => @movie.id}, {form_class: 'form', class: 'btn btn-primray'} %>

  <%= button_to("View All Media", {:controller => "home", :action => "index"}, :method => :get, class:"btn btn-default") %>

</div>
</div>

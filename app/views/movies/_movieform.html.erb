<% if @movie.errors.any? %>
  <ul class="errors">
    <% @movie.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @movie do |f| %>
  <div class = "form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class = "form-group">
    <%= f.label :director%>
    <%= f.text_field :director, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= f.label :description%>
    <%= f.text_area :description,class: "form-control"%>
  </div>
    <%= f.submit "Save", class: "btn btn-default" %>


<% end %>
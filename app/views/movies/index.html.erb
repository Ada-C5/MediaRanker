<div class="Results">
    <table>
      <thead>
        <tr>
          <th> Ranking </th>
          <th> Title </th>
          <th> Upvote </th>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td> Ranking: <%=movie.rank%> </td>
            <td> <%= link_to movie.title, movie_path(movie.id) %> </td>
            <td> <%= button_to "Upvote", upvote_movie_path(movie.id), method: :patch %> </td>
          </tr>
        <% end %>

      </tbody>
    </table>


    <%= button_to("View All Media", root_path, :method => :get) %>
    <%= button_to("Add A Movie",  new_movie_path, :method => :get) %>

</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <tbody>
        <tr>
          <th> Ranking </th>
          <th> Name </th>
          <th> Upvote </th>
        </tr>

        <% @movies.each do |movie| %>
          <tr>
            <td> Ranked: <%=movie.votes%> </td>
            <td> <%= link_to movie.name, movie_path(movie.id) %> </td>
            <td> <%= button_to("Upvote", {:controller => "movies", :action => "upvote", :id => movie.id}, class:"btn btn-primary") %> </td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>

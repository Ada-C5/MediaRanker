<table class="table table-hover">
  <thead>
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Upvote
      </th>
    </tr> 
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.rank %>
        </td>
        <td>
          <%= link_to movie.title, movie_path(movie.id) %>
        </td>
          <%= link_to "Upvote", rank_movie_path(movie.id), class: "btn btn-default", method: :put %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add A Movie", new_movie_path, class: "btn btn-default" %>
<%= link_to "View All Media", root_path, class: "btn btn-default" %>
<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
    <tr>

        <td><%= link_to movie.title, movie %></td>
        <td><%= pluralize(movie.votes.count, "vote") %></td>
        <td><%= button_to 'UpVote', upvote_movie_path(movie), method: :post %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie)%></td>
        <td><%= link_to 'Delete', movie, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>

    <% end %>
  </tbody>

</table>




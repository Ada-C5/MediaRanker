<table>
  <tr>
    <th>Ranking</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>

  <!-- generate each movie row here -->
  <% @movies.each do |movie| %>
    <tr>
      <td>Ranked: <%= movie.upvotes %></td>
      <td><%= link_to movie.title, movie_path(movie.id) %></td>
      <td><%= link_to "Upvote", movie_path(movie.id, movie: {upvotes: movie.upvotes + 1}), method: :patch %></td>
    </tr>
  <% end %>

</table>

<%= link_to "View All Media", root_path %>
<%= link_to "Add Movie", new_movie_path %>

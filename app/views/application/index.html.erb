<div class="row">
  <div class="col-md-4">
    <h1>Top Movies</h1>
    <% @movies.each do |movie| %>
      <h2><%= link_to movie.title, movie_path(movie.id) %>
        <small>Rank: <%= movie.rank %></small>
      </h2>
    <% end %>
    <%= link_to "View More Movies", movies_path %>
  </div>
  <div class="col-md-4">
    <h1>Top Books</h1>
    <% @books.each do |book| %>
      <h2><%= link_to book.title, book_path(book.id) %>
        <small>Rank: <%= book.rank %></small>
      </h2>
    <% end %>
    <%= link_to "View More Books", books_path %>
  </div>
  <div class="col-md-4">
    <h1>Top Albums</h1>
    <% @albums.each do |album| %>
      <h2><%= link_to album.title, album_path(album.id) %>
        <small>Rank: <%= album.rank %></small>
      </h2>
    <% end %>
    <%= link_to "View More Albums", albums_path %>
  </div>
</div>
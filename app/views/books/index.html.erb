<table>
  <tr>
    <th>Ranking</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>

  <!-- generate each book row here -->
  <% @books.each do |book| %>
    <tr>
      <td>Ranked: <%= book.upvotes %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= link_to "Upvote", book_path(book.id, book: {upvotes: book.upvotes + 1}), method: :patch %></td>
    </tr>
  <% end %>

</table>

<%= link_to "View All Media", root_path %>

<table class="table table-striped" class="table table-hover">
  <thead>
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.rating %></td>
        <td><%= link_to book.name , book_path(book.id)%></td>
        <td><%= button_to "Upvote", update_book_path(book.id), method: :patch, class: "btn btn-primary" %>
</td>


      </tr>
      <% end %>
    </tbody>
  </table>

  <%= button_to "View all media", root_path, method: :get, class: "btn btn-primary" %>

<div class="Results">
    <table>
      <thead>
        <tr>
          <th> Ranking </th>
          <th> Title </th>
          <th> Upvote </th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td> Ranking: <%=book.rank%> </td>
            <td> <%= link_to book.title, book_path(book.id) %> </td>
            <td> <%= button_to "Upvote", upvote_book_path(book.id), method: :patch %> </td>
          </tr>
        <% end %>

      </tbody>
    </table>


    <%= button_to("View All Media", root_path, :method => :get) %>
    <%= button_to("Add A Book",  new_book_path, :method => :get) %>

</div>

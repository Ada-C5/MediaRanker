<table class="table table-hover">
  <thead>
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Upvote
      </th>
    </tr> 
  </thead>
  <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= book.rank %>
          </td>
          <td>
            <%= link_to book.title, book_path(book.id) %>
          </td>
          <td>
            <%= link_to "Upvote", rank_book_path(book.id), class: "btn btn-default", method: :put %>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>
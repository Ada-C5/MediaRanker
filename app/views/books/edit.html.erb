<h2>Edit <%= @book.title %></h2>
<%= form_for @book, url: book_path(@book.id), method: :patch  do |f| %>
  <div class = "field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class = "field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class = "field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <%= f.submit "Save" %>
<% end %>

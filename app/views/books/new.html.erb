<div class="row">
<div class="col-lg-12">
<h2>New Book</h2>

<%= form_for @new_book, url: books_path, html: {method: :post} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :author %>
  <%= f.text_field :author, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>

  <br>

  <%= f.submit "Save", class: 'btn btn-default' %>
<% end %>

</div>
</div>

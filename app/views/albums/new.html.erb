<div class="row">
<div class="col-lg-12">
<h2>New Album</h2>

<%= form_for @new_album, url: albums_path, html: {method: :post} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :artist %>
  <%= f.text_field :artist, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>

  <br>

  <%= f.submit "Save", class: 'btn btn-default' %>
<% end %>

</div>
</div>

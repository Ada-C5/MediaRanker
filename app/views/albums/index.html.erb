<table>
  <tr>
    <th>Ranking</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>

  <!-- generate each album row here -->
  <% @albums.each do |album| %>
    <tr>
      <td>Ranked: <%= album.upvotes %></td>
      <td><%= link_to album.title, album_path(album.id) %></td>
      <td><%= link_to "Upvote", album_path(album.id, album: {upvotes: album.upvotes + 1}), method: :patch %></td>
    </tr>
  <% end %>

</table>

<%= link_to "View All Media", root_path %>
<%= link_to "Add Album", new_album_path %>

<div class="Results">
    <table>
      <thead>
        <tr>
          <th> Ranking </th>
          <th> Title </th>
          <th> Upvote </th>
        </tr>
      </thead>
      <tbody>
        <% @albums.each do |album| %>
          <tr>
            <td> Ranking: <%=album.rank%> </td>
            <td> <%= link_to album.title, album_path(album.id) %> </td>
            <td> <%= button_to "Upvote", upvote_album_path(album.id), method: :patch %> </td>
          </tr>
        <% end %>

      </tbody>
    </table>


    <%= button_to("View All Media", root_path, :method => :get) %>
    <%= button_to("Add An Album",  new_album_path, :method => :get) %>

</div>

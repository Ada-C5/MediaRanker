
<table class="table table-striped" class="table table-hover">
  <thead>
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
  </thead>

  <tbody>
      <% @albums.each do |album| %>
      <tr>
        <td><%= album.rating %></td>
        <td><%= link_to album.name , album_path(album.id)%></td>
        <td><%= button_to "Upvote", upvote_album_path(album.id), method: :patch, class: "btn btn-primary" %>
        </td>


      </tr>
      <% end %>
    </tbody>
  </table>

  <%= button_to "View all media", root_path , method: :get, class: "btn btn-primary" %>

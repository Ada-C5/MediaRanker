<table>
  <th> Ranking</th>
  <th> Name  </th>
  <th> Upvote </th>
  <% @albums.each do |album| %>
    <tr>
      <td>Ranked: <%= album.rank %> </td>
      <td> <%= link_to album.name, album_path(album.id) %> </td>
      <td> <%= button_to "Upvote", { action: "update" , class: "upvote", id: album.id}, method: "patch" %> </td>
    </tr>
  <% end %>
</table>

<%= button_to "View all Media", root_path, method: :get %>
<%= button_to "Add an Album", new_album_path, method: :get %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Upvote
      </th>
    </tr> 
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td>
          <%= album.rank %>
        </td>
        <td>
          <%= link_to album.title, album_path(album.id) %>
        </td>
        <td>
          <%= link_to "Upvote", rank_album_path(album.id), class: "btn btn-default", method: :put %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "View All Media", root_path, class: "btn btn-default" %>
<%= link_to "Add an Album", new_album_path, class: "btn btn-default" %>
<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body class="container">
    <div>
      <header>
        <% include ./partials/header %>
      </header>

      <div class="col-lg-12">
        <h2>Edit <%= locals.type %></h2>

        <form action=<%= "/" + locals.type + "/" + locals.media.id %> method="post" class="edit-form">
          <div class="form-group">
          <label for="name" class="media-name">Name</label>
          <input id="name" class="form-control media-name-textbox" type="text" name="name" value=<%= locals.media.name %>>
          <label for="by" class="media-by"><%= locals.madeBy %> by</label>
          <input id="by" class="form-control media-by-textbox" type="text" name="by" value=<%= locals.media.by %>>
          <label for="description" class="media-description">Description</label>
          <textarea id="description" class="form-control media-description-textbox" type="text" name="description"><%= locals.media.description %></textarea>
          <input type="hidden" name=<%= locals.type + "_id" %> value=<%= locals.media.id %> id="upvote">

          <input class="btn btn-default save-media" type="submit" value="Save">
        </form>
      </div>

      <footer>
        <% include ./partials/footer %>
      </footer>
    </div>
  </body>
</html>

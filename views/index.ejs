<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <header>
      <% include ./partials/header %>
    </header>

    <div class="col-lg-12">
      <table class="table table-hover">
        <tbody>
          <tr>
            <th>Ranking</th>
            <th>Name</th>
            <th>Upvote</th>
          </tr>
          <% for (let media of locals.media) { %>
          <tr>
            <td>Ranked: <%= media.votes %></td>
            <td class="col-md-7"><a href=<%= "/" + locals.type + "/" + media.id %>><%= media.name %></a></td>
            <td>
              <form action=<%= "/" + locals.type %> method="post">
                <input class="" type="hidden" name="upvote" value=<%= media.id %> id="upvote">
                <input class="btn btn-default" type="submit" value="Upvote">
              </form>

          </tr>
          <% } %>
        </tbody>
      </table>

      <a class="btn btn-default" href="/">View All Media</a>
      <a class="btn btn-default" href=<%= "/" + locals.type + "/new" %>>Add <%= locals.displayType %></a>
    </div>


    <footer>
      <% include ./partials/footer %>
    </footer>
  </body>
</html>

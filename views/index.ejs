<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <header>
      <% include ./partials/header %>
    </header>

    <div class="col-lg-12">
      <table class="table table-hover">
        <tbody>
          <tr>
            <th>Ranking</th>
            <th>Name</th>
            <th>Upvote</th>
          </tr>
          <% for (let media of locals.media) { %>
          <tr>
            <td>Ranked: <%= media.votes %></td>
            <td class="col-md-7"><a href="#"><%= media.name %></a></td>
            <td>
              <form action="/movies" method="post">
                <input class="" type="hidden" name="upvote" value=<%= media.id %> id="upvote">
                <input class="btn btn-default" type="submit" value="Upvote">
              </form>

          </tr>
          <% } %>
        </tbody>
      </table>
    </div>


    <footer>
      <% include ./partials/footer %>
    </footer>
  </body>
</html>
